{
    "compilerOptions": {
      "target": "es2022",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "rootDir": "./src",
      "outDir": "./dist",
      "inlineSourceMap": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }